exec --no-startup-id xmodmap ~/.Xmodmap

# Parcellite, because, clipboards rock
exec --no-startup-id parcellite

# Start compositor
exec --no-startup-id compton

# Background image
exec --no-startup-id feh --bg-scale ~/backgrounds/2017-eclipse-16x9.jpg

# Austrailian scroll for Elan touchpad (Asus Chromebook)
exec --no-startup-id xinput list |grep -q "Elan Touchpad" && xinput set-prop "Elan Touchpad" 451 1

# Network manager
exec --no-startup-id nm-applet

# Sound control (Pulse Audio)
exec --no-startup-id hash pasystray 2>/dev/null && pasystray

# Original "ubuntu theme (not sure where I got that from)"
# client.focused #dd4814 #dd4814 #ffffff #902a07
# client.focused_inactive #5e2750 #5e2750 #aea79f #5e2750
# client.unfocused #5e2750 #5e2750 #aea79f #5e2750
# client.urgent #77216f #77216f #ffffff #efb73e

# From i3wm-themer:
# Basic changes that need to be made in order to get i3wm configuration
# file work with the themes from this repository.
# Those lines need to be added if not already there.

# The $HOME/.Xresources should contain a line such as
#     *color0: #121212
# and must be loaded properly, e.g., by using
#     xrdb $HOME/.Xresources
# This value is picked up on by other applications (e.g., the URxvt terminal
# emulator) and can be used in i3 like this:
# set_from_resource $<name> <resource_name> <fallback>
set_from_resource  $background i3wm.background
set_from_resource  $foreground i3wm.foreground
set_from_resource  $base00  i3wm.color00
set_from_resource  $base01  i3wm.color01
set_from_resource  $base02  i3wm.color02
set_from_resource  $base03  i3wm.color03
set_from_resource  $base04  i3wm.color04
set_from_resource  $base05  i3wm.color05
set_from_resource  $base06  i3wm.color06
set_from_resource  $base07  i3wm.color07
set_from_resource  $base08  i3wm.color08
set_from_resource  $base09  i3wm.color09
set_from_resource  $base0A  i3wm.color0A
set_from_resource  $base0B  i3wm.color0B
set_from_resource  $base0C  i3wm.color0C
set_from_resource  $base0D  i3wm.color0D
set_from_resource  $base0E  i3wm.color0E
set_from_resource  $base0F  i3wm.color0F

# See https://github.com/khamer/base16-i3/blob/master/templates/client-properties.mustache
# Basic color configuration using the Base16 variables for windows and borders.
# Property Name         Border  BG      Text    Indicator Child Border
client.focused          $base05 $base0D $base00 $base0D $base0D
client.focused_inactive $base01 $base01 $base05 $base03 $base01
client.unfocused        $base01 $base00 $base05 $base01 $base01
client.urgent           $base08 $base08 $base00 $base08 $base08
client.placeholder      $base00 $base00 $base05 $base00 $base00
client.background $base07

# See https://github.com/khamer/base16-i3/blob/master/templates/bar-colors.mustache
bar {
  colors {
      background $base00
      separator  $base01
      statusline $base04

      # State             Border  BG      Text
      focused_workspace   $base05 $base0D $base00
      active_workspace    $base05 $base03 $base00
      inactive_workspace  $base03 $base01 $base05
      urgent_workspace    $base08 $base08 $base00
      binding_mode        $base00 $base0A $base00
  }
  status_command i3status
  tray_output primary
#  tray_output HDMI-1
#  tray_output HDMI-2
#  tray_output DP-1
#  tray_output DP-2
#  tray_output eDP-1
}
